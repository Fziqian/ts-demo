{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },

    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "indent": [0, 4, {
            "SwitchCase": 2
        }],
        "linebreak-style": [
            0,
            "windows"
        ],
        "quotes": [
            0,
            "single"
        ],
        "semi": [
            1,
            "always"
        ]
    }
}